{% extends 'root.twig' %}
{% block content %}
<div id="login">
    <v-app light>
        <v-layout app>
            <v-flex xs12 sm4 offset-sm4>
                <v-card class="pa-5">
                    <h1 class="form-title">Sharetoall</h1>
                    {% if user_id %}

                    <form id="login" class="form-signin" role="form" method="post" ref="form" action="/auth/logout">
                        <input type="hidden" name="session_token" value="{{ session_token }}" v-model="session_token" ref="session_token" />
                        <h2 class="form-signin-heading">Logged in as {{ firstname }}</h2>
                        <button type="button" @click="logout" class="btn btn-lg btn-primary btn-block">Logout</button>
                    </form>

                    {% else %}

                    <div class="form-wrapper form-500">
                        <form class="form-signin" role="form" id="login" method="post" name="login_form" action="/auth/login" ref="form" @keyup.enter="login">
                            <input type="hidden" name="session_token" value="{{ session_token }}" v-model="session_token" ref="session_token" />
                            {% if error %}
                            <div class="alert alert-danger">
                                <strong>{{ error }}</strong>
                            </div>
                            {% endif %}
                            <v-text-field
                                 label="Your email"
                                 name="email"
                                 id="email"
                                 value=""
                                 class="text-input"
                                 v-model="email"
                                 >
                            </v-text-field>
                                <v-text-field
                                 label="Your password"
                                 name="password"
                                 id="password"
                                 :append-icon="passwordVisible ? 'visibility' : 'visibility_off'"
                                 :append-icon-cb="() => (passwordVisible = !passwordVisible)"
                                 :type="passwordVisible ? 'text' : 'password'"
                                 v-model="password"
                            >
                            </v-text-field>

                             <v-btn @click="login">Sign In</v-btn>
                        </form>
                        {% endif %}
                    </div>
                </v-card>
            </v-flex>
        </v-layout>
    </v-app>
</div>
{% endblock %}
