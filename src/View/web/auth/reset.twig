{% extends 'root.twig' %}

{% block content %}
    <div class="login-page__form-container">
        <div class="auth-manager__container">
            <div class="login-form"><h1 class="login-form__title">Reset Password</h1>
                <form id="reset-password" class="form-reset-password" role="form" method="post" name="reset_form"
                      action="/auth/reset">
                    {% include 'partials/session_token.twig' %}

                    {% if error %}
                        <div class="alert alert-danger">
                            <strong>{{ error }}</strong>
                        </div>
                    {% endif %}

                    <p>Please enter the email address for your account. A verification code will be sent to you. Once you
                        have received the verification code, you will be able to choose a new password for your account.</p>

                    {% if success %}
                        <div class="alert alert-success" role="alert">Please check your emails</div>
                    {% else %}
                        <div class="form-group">
                            <input type="email" class="form-control input-lg" placeholder="Email" required="required"
                                   name="email" value="{{ email }}" ng-model="email">
                        </div>

                        <button type="submit" class="btn btn-lg btn-primary btn-block" ng-disabled="reset_form.$invalid">
                            Submit
                        </button>
                    {% endif %}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
